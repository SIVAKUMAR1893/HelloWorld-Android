pipeline {
    agent any
    environment {
       PATH="${GRADLE_HOME}/bin:${PATH}"

    }
    stages {
        stage('Gradle') {
            steps {
                sh 'gradle --version'
            }
        }
        stage('Clean Build') {
               steps{
                    sh "pwd"
                    sh 'ls -al'
                    sh 'gradle'
               
                    sh './gradlew clean'
               }
        }
    }
}
