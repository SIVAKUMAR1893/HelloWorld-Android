pipeline {
    agent any
   
    stages {
        stage('Gradle') {
            steps {
            sh 'pwd'
            sh 'ls -lrth'
             sh 'gradle --version'
          
              
            }
        }
        stage('Clean Build') {
               steps{
                    sh "pwd"
                    sh 'ls -al'
                    sh 'gradle'
                    sh 'gradle wrapper --gradle-version 5.1.1'
               }
        }
    }
}
